---
interface Props {
  pageName: string,
}

import { ViewTransitions } from 'astro:transitions';

import Header from "@/components/Header.tsx";
import Footer from "@/components/Footer.tsx";
import { bodyBorder, mainBorder } from "@/components/utils";

const { pageName } = Astro.props;
const nameWithName: string = pageName.trim() + " - Ryan Liu";
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{nameWithName}</title>
	</head>
	<body class={bodyBorder}>
		<Header client:load />
		<main class={mainBorder}>
			<div class="flex flex-col flex-1 max-w-screen-lg w-full">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
